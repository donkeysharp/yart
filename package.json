{
  "name": "react-template",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/javascript/*.js; rm -rf dist/css/*.css",
    "server": "ws --spa index.html -p 8000 --rewrite '/dist/* -> dist/$1'",
    "build": "parallelshell 'npm run clean' 'npm run build:js' 'npm run build:css'",
    "build:js": "browserify src/javascript/index.js -t [ babelify --presets [es2015 react] ] | uglifyjs -mc -o dist/javascript/main.min.js",
    "build:css": "sass src/scss/app.scss:dist/css/app.min.css --style compressed --sourcemap=none",
    "watch": "parallelshell 'npm run server' 'npm run clean' 'npm run watch:css' 'npm run watch:js'",
    "watch:js": "watchify src/javascript/index.js -o dist/javascript/main.js -t [ babelify --presets [es2015 react] ] -v",
    "watch:css": "sass --watch src/scss/app.scss:dist/css/app.css --sourcemap=none"
  },
  "author": "donkeysharp",
  "license": "MIT",
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "local-web-server": "^1.2.6",
    "parallelshell": "^2.0.0",
    "uglify-js": "^2.7.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "history": "^3.0.0",
    "react": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.5.2",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0"
  }
}
